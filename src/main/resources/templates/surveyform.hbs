{{#partial "title"}}
  <title>Survey</title>
{{/partial}}
{{#partial "css"}}
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/surveyform.css">
{{/partial}}
{{#partial "content"}}
  <div class="container mt-5">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-md-8">
        <form id="regForm" action="/survey" method="post">
          <h1 id="register">Survey Form</h1>
          <div class="all-steps" id="all-steps">
            <span class="step"><i class="fa fa-user"></i></span>
            <span class="step"><i class="fa-solid fa-calendar-days"></i></span>
            <span class="step"><i class="fa-solid fa-heart"></i></span>
            <span class="step"><i class="fa-solid fa-user-doctor"></i></span>
            <span class="step"><i class="fa-solid fa-heart-pulse"></i></span>
            <span class="step"><i class="fa-solid fa-burger"></i></span>
            <span class="step"><i class="fa-solid fa-sack-dollar"></i></span>
            <span class="step"><i class="fa-solid fa-language"></i></span>
            <span class="step"><i class="fa-solid fa-people-group"></i></span>
          </div>

          <div class="tab">
            <h6>What is your gender?</h6>
            <input type="radio" id="male" oninput="this.className = ''" name="gender" value="Male" required>
            <label for="male">Male</label><br>
            <input type="radio" id="female" oninput="this.className = ''" name="gender" value="Female">
            <label for="female">Female</label><br>
            <input type="radio" id="other" oninput="this.className = ''" name="gender" value="Other">
            <label for="other">Other</label>
          </div>
          <div class="tab">
            <h6>How old are you ?</h6>
            <input type="radio" id="child" oninput="this.className = ''" name="age" value="0 - 18 yrs" required>
            <label for="child">0 - 18 yrs</label><br>
            <input type="radio" id="young_adult" oninput="this.className = ''" name="age" value="19 - 30 yrs">
            <label for="young_adult">19 - 30 yrs</label><br>
            <input type="radio" id="middle_age" oninput="this.className = ''" name="age" value="31 - 45 yrs">
            <label for="middle_age">31 - 45 yrs</label><br>
            <input type="radio" id="old_age" oninput="this.className = ''" name="age" value="Above 45 yrs">
            <label for="old_age">Above 45 yrs</label>
          </div>
          <div class="tab">
            <h6>What is your relationship status?</h6>
            <input type="radio" id="single" oninput="this.className = ''" name="relationship" value="Single" required>
            <label for="single">Single</label><br>
            <input type="radio" id="married" oninput="this.className = ''" name="relationship" value="Married">
            <label for="married">Married</label><br>
            <input type="radio" id="widowed" oninput="this.className = ''" name="relationship" value="Widowed">
            <label for="widowed">Widowed</label><br>
            <input type="radio" id="divorced" oninput="this.className = ''" name="relationship" value="Divorced">
            <label for="divorced">Divorced</label>
          </div>
          <div class="tab">
            <h6>Have you seen a therapist before ?</h6>
            <input type="radio" id="yes" oninput="this.className = ''" name="seen_therapist" value="Yes" required>
            <label for="yes">Yes</label><br>
            <input type="radio" id="no" oninput="this.className = ''" name="seen_therapist" value="No">
            <label for="no">No</label><br>
          </div>

          <div class="tab">
            <h6>How would you describe your physical health?</h6>
            <input type="radio" id="just_there" oninput="this.className = ''" name="physical_health" value="Just there" required>
            <label for="just_there">Just there</label><br>
            <input type="radio" id="great" oninput="this.className = ''" name="physical_health" value="Great">
            <label for="great">Great</label><br>
          </div>

          <div class="tab">
            <h6>How would you describe your eating habits?</h6>
            <input type="radio" id="just_there" oninput="this.className = ''" name="eating_habits" value="Just there" required>
            <label for="just_there">Just there</label><br>
            <input type="radio" id="great" oninput="this.className = ''" name="eating_habits" value="Great">
            <label for="great">Great</label><br>
          </div>

          <div class="tab">
            <h6>How would you describe your financial status?</h6>
            <input type="radio" id="just_there" oninput="this.className = ''" name="financial_status" value="Just there" required>
            <label for="just_there">Just there</label><br>
            <input type="radio" id="in_between" oninput="this.className = ''" name="financial_status" value="In between" required>
            <label for="in_between">In between</label><br>
            <input type="radio" id="great" oninput="this.className = ''" name="financial_status" value="Great">
            <label for="great">Great</label><br>
          </div>
          <div class="tab">
            <h6>What is your preferred language?</h6>
            <select name="language" required id="language" class="form-select">
              <option>English</option>
              <option>Swahili</option>
              <option>French</option>
            </select>
          </div>
          <div class="tab">
            <h6>What is your preferred option?</h6>
            <select name="preferred" required id="preferred" class="form-select">
              <option>Individual therapy</option>
              <option>Group therapy</option>
              <option>Couples therapy</option>
            </select>
          </div>
          <div class="thanks-message text-center" id="text-message">
            <img src="/images/accept.png" class="img-fluid mb-4"><br>
            <span>Thank you for taking the time to fill this form to understand your status</span><br>
            <button class="btn documentation_btn my-3 mx-auto" type="submit">Submit</button>
          </div>
          <div style="overflow:auto;" id="nextprevious" class="my-3">
            <div style="float:right;">
              <button class="round" type="button" id="prevBtn" onclick="nextPrev(-1)"><i class="fa fa-angle-double-left"></i></button>
              <button class="round" type="button" id="nextBtn" onclick="nextPrev(1)"><i class="fa fa-angle-double-right"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{{/partial}}
{{>layout.hbs}}